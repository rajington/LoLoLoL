
doctype 5
html
  head
    title SETM
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/splash.css')
  body
    div(class='container')
      h1(class='text-center') Summoners for the Ethical Treatment of Minions

      div
        h3(class='text-center') Million Killers
        each champ in mostMinionsKilledChamps
          div(class='col-md-4', style='position:relative; cursor:pointer;')
            a(href='/champion/#{champ.championId}')
              img(src='http://ddragon.leagueoflegends.com/cdn/img/champion/loading/#{champ.name}_0.jpg')
            p(class='cs-stat-img-text cs-stat-img-heading', style='top:350px;') Total minions killed:
            //- p(class='cs-stat-img-text cs-stat-img-value', style='top:380px;')= champ.totalMinionKills
            p(class='cs-stat-img-text cs-stat-img-heading', style='top:450px;') Minions killed/min:
            p(class='cs-stat-img-text cs-stat-img-value', style='top:480px;')= champ.minionsKilled.toFixed(3)
            blockquote
              p= champ.quote
              footer= champ.champName
      
      div
        h3(class='text-center') Noble Champions
        each champ in leastMinionsKilledChamps
          div(class='col-md-4', style='position:relative; cursor:pointer;')
            a(href='/champion/#{champ.championId}')
              img(src='http://ddragon.leagueoflegends.com/cdn/img/champion/loading/#{champ.name}_0.jpg')
            p(class='cs-stat-img-text cs-stat-img-heading', style='top:350px;') Total minions killed:
            //- p(class='cs-stat-img-text cs-stat-img-value', style='top:380px;')= champ.totalMinionKills
            p(class='cs-stat-img-text cs-stat-img-heading', style='top:450px;') Minions killed/min:
            p(class='cs-stat-img-text cs-stat-img-value', style='top:480px;')= champ.minionsKilled.toFixed(3)
            blockquote
              p= champ.quote
              footer= champ.champName
